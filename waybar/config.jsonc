{
    // -------------------------------------------------------------------------
    // Global configuration
    // -------------------------------------------------------------------------

    "layer": "top",
    "position": "top",
    "height": 45,
    "spacing": 5,

    // "margin-left": 10,
    // "margin-bottom": 0,
    // "margin-right": 10,


    "modules-left": [
        "custom/power",
        "hyprland/workspaces",
        "custom/spotify"
    ],

    "modules-center": [
        "clock",
        "custom/weather"
    ],

    "modules-right": [
        "cpu",
        "memory",
        "temperature",
        "battery",
        "wireplumber",
        "bluetooth",
        "network"
        // "tray",
    ],


    // -------------------------------------------------------------------------
    // Modules
    // -------------------------------------------------------------------------


    "temperature": {
        // "thermal-zone": 1,
        "interval": 4,
        "hwmon-path": "/sys/class/hwmon/hwmon3/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "Ôãâ {temperatureC}¬∞C",
        "format-critical": "Û∞à∏  {temperatureC}¬∞C",
        "format": "{icon}  {temperatureC}¬∞C",
        "format-icons": ["Ôãã", "Ôãâ", "Ôãá"],
        "max-length": 7,
        "min-length": 7,
        "on-click": "xsensors"
    },

    "memory": {
        "interval": 30,
        "format": "Ôãõ  {used:0.2f} / {total:0.0f} GB",
        "on-click": "ghostty -e btop"
    },

    "battery": {
        "interval": 2,
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 10
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Ôá¶ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-icons": [
            "ÔâÑ",
            "ÔâÉ",
            "ÔâÇ",
            "ÔâÅ",
            "ÔâÄ"
        ]
    },

    "network": {
        "format-wifi": "Ôá´ ",
        "format-ethernet": "{ifname}: {ipaddr}/{cidr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format": "ÔÄí",
        "format-disconnected": "Û±öº ",
        // "on-click": "wl-copy $(ip address show up scope global | grep inet | head -n1 | cut -d/ -f 1 | tr -d [:space:] | cut -c5-)",
        "tooltip-format": "ÔÇì {bandwidthUpBits} ÔÄô {bandwidthDownBits}\n{ifname}\n{ipaddr}/{cidr}\n",
        "tooltip-format-wifi": "Ôá´ {essid} {frequency}MHz\nStrength: {signaldBm}dBm ({signalStrength}%)\nIP: {ipaddr}/{cidr}\nÔÇì {bandwidthUpBits} ÔÄô {bandwidthDownBits}",
        "interval": 10
    },

    "custom/weather": {
        "format": "{}",
        "interval": 3600,
        "exec": "curl -s 'https://wttr.in/?format=1'",
        "exec-if": "ping wttr.in -c1"
    },

    "custom/spotify": {
        "exec": "~/.config/waybar/mediaplayer.py --player spotify",
        "format": "{}  ÔÜº",
        "return-type": "json",
        "on-click": "playerctl play-pause",
        "on-scroll-up": "playerctl next",
        "on-scroll-down": "playerctl previous",
        "max-length": 45
    },

    "custom/media": {
        "format": "{0} {1}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        //"exec": "~/.config/waybar/mediaplayer.py" // Script in resources folder
        // "exec": "~/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },

    "custom/power": {
        "format": "Û∞ê• ",
        "tooltip": false,
        "on-click": "wlogout -b 4"
    },

    "clock": {
        "format": "ÔÄó  {:%H:%M}",
        "tooltip-format": "{:%d-%m-%Y}"
        // "tooltip-format": "<tt><small>{calendar}</small></tt>",
        // "today-format": "<b><span color=\"red\">{}</span></b>",
        // "calendar": {
          // "mode": "month",
          // "today": "<span color='#ffcc66><b><u>{}</b></u></span>'"
        // }
    },

    "cpu": {
        "interval": 1,
        // "format": "Ôãõ {}%", // Icon: microchip
        "format": "{max_frequency:.1f}GHz <span color=\"darkgray\">| {usage}%</span>",
        "max-length": 13,
        "min-length": 12
    },


    "hyprland/workspaces": {
        "all-outputs": true,
        "format": "{name}",
        "format-icons": {
            "1": "‰∏Ä",
            "2": "‰∫å",
            "3": "‰∏â",
            "4": "Âõõ",
            "5": "‰∫î",
            "6": "ÂÖ≠",
            "7": "‰∏É",
            "8": "ÂÖ´",
            "9": "‰πù",
            "10": "ÂçÅ",
        },
        "on-scroll-up": "hyprctl dispatch workspace e+1 1>/dev/null",
        "on-scroll-down": "hyprctl dispatch workspace e-1 1>/dev/null",
        "sort-by-number": true,
        "active-only": false,
    },

    "pulseaudio": {
        "scroll-step": 3, // %, can be a float
        "format": "{icon} {volume}% {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö© {format_source}",
        //"format-source": "{volume}% ÔÑ∞",
        //"format-source-muted": "ÔÑ±",
        "format-source": "ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol",
        "on-click-right": "amixer sset Master toggle"
    },

    "wireplumber": {
        "on-click": "pavucontrol",
        "on-click-right": "amixer sset Master toggle 1>/dev/null",
        //on-click: "${wpctl} set-mute @DEFAULT_AUDIO_SINK@ toggle";
        //on-scroll-down: "${wpctl} set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 0.04+";
        //on-scroll-up: "${wpctl} set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 0.04-";
        "format": "{icon} {volume}%",
        "format-muted": "Ó¨§ ",
        "format-source": "ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        //"format-muted": "<span foreground='#fab387'>Ôë¶ </span>",
        //"format-icons": [ "<span foreground='#fab387'>ÔÄ®</span>" ]
        "format-icons": {
            "headphone": "ÔÄ• ",
            "hands-free": "Ôñê ",
            "headset": "Ôñê ",
            "phone": "ÔÇï ",
            "portable": "ÔÇï ",
            "car": "ÔÜπ ",
            "default": ["ÔÄ¶ ", "ÔÄß ", "ÔÄ® "]
        },
    },

    "tray": {
        "icon-size": 15,
        "spacing": 5
    },

    "bluetooth": {
      "format-on": "Û∞ÇØ",
      "format-off": "Û∞Ç≤ ",
      "format-connected": "Ôäî {device_alias}",
      "format-connected-battery": "Ôäî {device_alias} ({device_battery_percentage}%)",
      // "format-device-preference": [ "device1", "device2" ], // preference list deciding the displayed device
      "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
      "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
      "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
      "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
      "on-click": "ghostty -e bluetui"
    }
  }
